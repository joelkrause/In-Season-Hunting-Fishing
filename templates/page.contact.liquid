<div class="page-title-container">
  <div class="wrapper">
    <div class="breadcrumbs">
      {% include 'breadcrumbs' %}
    </div>
    <h1>
      {{ page.title }}
    </h1>
  </div>
</div>
<div class="wrapper page_wrap">
  <div class="grid">
    <div class="grid__item">
      <div class="contact_map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6274.037394693086!2d145.950887!3d-38.163005!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b29961db739500f%3A0xa69c3d6218a9fb39!2s2%2F12+June+Ct%2C+Warragul+VIC+3820!5e0!3m2!1sen!2sau!4v1518488110792" width="100%" height="350px" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
    </div>
    <div class="grid__item one-quarter">
      <div class="rte">
        {{ page.content }}
      </div>
    </div>
    <div class="grid__item three-quarters">
      {% form 'contact' %}

        {% if form.posted_successfully? %}
          <p class="form-success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {% endif %}

        {{ form.errors | default_errors }}

        <label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
        <input type="text"
          name="contact[name]"
          id="ContactFormName"
          placeholder="{{ 'contact.form.name' | t }}"
          value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">

        <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
        <input type="email"
          name="contact[email]"
          id="ContactFormEmail"
          placeholder="{{ 'contact.form.email' | t }}"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off">

        <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
        <input type="tel"
          name="contact[phone]"
          id="ContactFormPhone"
          placeholder="{{ 'contact.form.phone' | t }}"
          value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          pattern="[0-9\-]*">

        <label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
        <textarea rows="10"
          name="contact[body]"
          id="ContactFormMessage"
          placeholder="{{ 'contact.form.message' | t }}">
          {% if form.body %}
            {{ form.body }}
          {% endif %}
        </textarea>

        <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">

      {% endform %}
    </div>
  </div>
</div>
