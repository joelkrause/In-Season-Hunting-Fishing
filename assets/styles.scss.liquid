/**==== Pages ====**/
.page_wrap {
    background-color: #fff;
    padding: 50px;
    margin-top: -150px;
    position: relative;
    z-index: 10;
    border-top: 5px solid #041246;
    box-shadow: 0px 1px 2px #ccc;
    @include border-radius(3px);
    position: relative;
    z-index: 10;
}

.contact_map {
  padding-bottom: 50px;
}

/**==== Collection Page ====**/
.product-card {
    position: relative;

  .on-sale {
    position: absolute;
    background: #27ae60;
    color: #fff;
    padding: 5px;
    top: 0;
    left: 0;
  }
  .title {
    font-family: $mainFont;
    font-weight: 700;
    color: $accentColor;
    text-decoration: none;
  }
  .button {
    display: block;
    width: 100%;
    padding: 10px 0;
    background-color: $accentColor;
    color: white;
    font-family: $mainFont;
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border-bottom: 3px solid #041246;
  }
  .reviews-container {
    padding: 0 0 20px 0;
    .spr-badge-caption {
      display: none;
    }
  }
}

.collection_sidebar {
    border-right: 1px solid #ececec;
    height: 100%;
    padding: 0 50px 0 0;
}

/**==== Product Page ====**/
.product-page {

  .price {
    font-size: 18pt;
    padding: 0 0 15px 0;
    color: #27ae60;
  }
  button {
    font-family: $mainFont;
    font-weight: 700;
    font-size: 14pt;
    width: 100%;
    background-color: #182968;
    border: 0;
    color: white;
    padding: 15px 0;
    border-radius: 3px;
  }
  .selector-wrapper {
      width: 100%;
      margin: 0 0 25px 0;

      label {
        width: 100%;
        display: block;
        font-family: $accentFont;
        text-transform: uppercase;
      }
      select {
        width: 100%;
        display: block;
        padding: 15px 5px;
      }
    }
}

.recommended_products {
  padding: 25px 0 0 0;

  h2 {
    font-family: $mainFont;
    color: $accentColor;
    font-weight: 700;
  }
}

/**==== Footer ====**/
.site-footer {
    color: {{ settings.footer_text }};
    padding: 75px 0;
    margin: 75px 0 0 0;

    a {
      color: {{ settings.footer_text }};
      text-decoration: none;
    }
    h2 {
      font-family: $mainFont;
      font-weight: 700;
      border-bottom: 1px solid #333333;
      padding: 0 0 10px 0;
    }
    ul,
    li {
      padding: 0;
      margin: 0;
      list-style: none;
    }
    li a {
      padding: 10px 0;
    }
    .copyright,
    .payment-icons,
    .secure-badge {
      padding-top: 50px;
    }
    .payment-icons img {
      max-width: 52px;
    }
}

ul.tabs {
    margin: 25px 0 0 0;
    padding: 0;
    font-weight: normal;
}

ul.tabs li {
    display: inline-block;
    list-style: none;
    margin: 0;
}

ul.tabs li a {
    background: #e8e9eb;
    text-decoration: none;
    padding: 10px 15px;
    display: block;
    border-bottom: 0 !important;
    margin-bottom: -1px;
    font-family: $mainFont;
    font-weight: 700;
    font-size: 12pt;
    color: $accentColor;
}

ul.tabs li a.active {
    color: #fff;
    background: $accentColor;
}

ul.tabs li a:hover,
ul.tabs li a:focus {
    opacity: 1 !important;
}

#tab-1, #tab-2, #tab-3 {
    border: 1px solid #e8e9eb;
    padding: 15px;
}
