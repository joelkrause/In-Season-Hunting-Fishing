<div class="site-info text-center">
  {% for block in section.blocks %}
    <div class="site-info-block">
      <div class="info-icon"><img src="{{ block.settings.info-icon | img_url: '32x' }}" /></div>
      <div class="info-text">{{ block.settings.info-text }}</div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Site Info",
  "settings": [
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Site Info",
      "settings": [
        {
          "id": "info-text",
          "type": "text",
          "label": "Info Text"
        },
        {
          "id": "info-icon",
          "type": "image_picker",
       		"label": "Info Icon"
        }
      ]
    }
  ]
}
{% endschema %}
